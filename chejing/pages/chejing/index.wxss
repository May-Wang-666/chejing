/**index.wxss**/
@import '/dist/style/weui.wxss';

.title {
  display: flex;
  justify-content: center;
  margin-block-end: 10rpx;
}

.photo {
  height: 80px;
  width: 80px;
  border-radius: 100px;
}

.content{
  width: 80%;
  height: 90%;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  border-radius: 20rpx;
  background-color: rgba(199, 200, 201, 0.288);  
}

#buttons{
  display: flex;
  justify-content: flex-end;
  flex-direction: row;
  margin-block-start: 50rpx;
  margin-right: 60rpx;
}

.button-img{
  width: 45rpx;
  height: 45rpx;
  margin-right: 60rpx;
  margin-bottom: 40rpx;
}

.button-img-long{
  width: 90rpx;
}

.comments-view{
  width: 80%;
  padding: 10rpx 30rpx !important;
  margin: 0 auto;
}

.comment-content{
  font-size: 11pt;
}

.comment-time{
  font-size: 9pt;
  color: #939393;
}

#photo{
  display: flex;
  justify-content: center;
  margin-block-start: 70rpx;
  margin-block-end: 50rpx;
}

#button{
  margin-left: 260rpx;
  margin-right: 260rpx;
  margin-block-end: 50rpx;
}

#content{
  display: flex;
  justify-content: center;
  line-height: 50rpx;
}

#lidan{
  text-align: right;
  padding-right: 20rpx;
  font-size: 10pt;
  color: red;
}

#footer{
  width: 100%;
  display: flex;
  justify-content: center;
  position: fixed;
  bottom: 0;
  margin-block-end: 50rpx;
}

.release {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 20rpx 12rpx;
  background: #FFFFFF;
}

.release .text {
  background: #F7F7F7;
  border-radius: 8rpx;
  width: 612rpx;
  min-height: 40rpx;
  max-height: 120rpx;
  border-width: 10rpx 20rpx;
  border-style: solid;
  border-color: #F7F7F7;
  line-height: 40rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #333333;
}

.release .submit {
  width: 138rpx;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #1B9AF4;
  text-align: center;
  height: 64rpx;
  line-height: 60rpx;
}

.input_null {
  margin-left: 12rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #939393;
}