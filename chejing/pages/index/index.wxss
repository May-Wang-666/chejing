.happy_item {
  font-size: 10pt;
  line-height: 60rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.happy_wrapper {
  margin: 0 auto;
  width: 80%;
  padding: 20rpx 30rpx !important;
  border-top: 1px solid #11cd6e;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top:-100rpx;
}

.userinfo-avatar {
  width: 80px;
  height: 80px;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  margin-bottom: 50rpx;
}

.usermotto {
  margin-top: 20px;
}

.detail{
  background-color: #f2f2f2;
  width: 100%;
  padding: 30rpx 35rpx;
}

.detail-content {
  font-size: 11pt;
}

.detail-from {
  font-size: smaller;
  color: #11cd6e;
  margin-bottom: 20rpx;
  margin-top: 10rpx;
}

.detail-comments {
  padding: 8rpx 0rpx !important;
}

.comment-content {
  font-size: 10pt !important;
}

.comment-time {
  font-size: 8pt !important;
}
