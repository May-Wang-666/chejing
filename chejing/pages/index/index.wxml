<!--index.wxml-->
<view class="container">
  <view class="userinfo" >
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 点击获取微信授权 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      <view class="usermotto">
        <text class="user-motto">{{motto}}</text>
      </view>
    </block>
  </view>

  <image class='background' src="../../image/dog.jpeg" mode="aspectFill"></image>
</view>